@model IEnumerable<pracainz.Models.Technolog>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Technolog</h2>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Login technologa</th>
            <th scope="col">Nazwa Technologa</th>
            <th scope="col">Powod przestoju maszyny</th>
            <th scope="col">Komentarz</th>
            <th scope="col">Czy wznowiono prace</th>
            <th scope="col">Data</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var model in Model)
        {
            <tr>
                <td>@Html.DisplayFor(m => model.LoginTechnologa)</td>
                <td>@Html.DisplayFor(m => model.NazwaTechnologa)</td>
                <td>@Html.DisplayFor(m => model.PowodPrzestoju)</td>
                <td class="warning">@Html.DisplayFor(m => model.Komentarz)</td>
                <td style="color: forestgreen"><b>@Html.DisplayFor(m => model.CzyProdukcjaWznowiona.Value) Produkcja wznowiona</b></td>
                <td>12:35</td>
            </tr>
        }
    </tbody>
</table>

<div class="container">
    <div class="input-group">
        <span class="input-group-addon" id="sizing-addon2" style="width: 130px!important">Powod przestoju</span>
        <input type="text" class="form-control" placeholder="Powód przestoju maszyny" aria-describedby="sizing-addon2" style="width: 300px!important">
    </div>
    <div class="input-group">
        <span class="input-group-addon" id="sizing-addon2" style="width: 130px!important">Komentarz</span>
        <input type="text" class="form-control" placeholder="Komentarz technologa" aria-describedby="sizing-addon2" style="width: 300px!important">
    </div>
        <div class="input-group">
            <span class="input-group-addon"> Czy produkcja wznowiona
                <input type="checkbox" aria-label="...">
            </span>
            <input class="form-control" style="width: 0px!important">
        </div>
    <div class="btn btn-success">Zapis do bazy</div>
</div>
