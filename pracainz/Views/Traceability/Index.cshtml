@model IEnumerable<pracainz.Models.Traceability>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Traceability</h2>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th scope="col">Dostawca</th>
            <th scope="col">Nr produktu</th>
            <th scope="col">Data dostarczenia</th>
            <th scope="col">Punkt wejscia</th>
            <th scope="col">Aktualne stanowisko</th>
            <th scope="col">Ścieżka</th>
            <th scope="col">Nr zlecenia</th>
            <th scope="col">Poczatkowa ilosc sztuk</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var model in Model)
        {
        <tr>
            <td>@Html.DisplayFor(m => model.DostawcaCzesci)</td>
            <td class="success">@Html.DisplayFor(m => model.NrDostawy)</td>
            <td>@Html.DisplayFor(m => model.DataDostarczenia)</td>
            <td>@Html.DisplayFor(m => model.PunktWejscia)</td>
            <td>@Html.DisplayFor(m => model.AktualneStanowisko)</td>
            <td class="info">1-3-4-5-6-9-11</td>
            <td>@Html.DisplayFor(m => model.NrZlecenia)</td>
            <td>@Html.DisplayFor(m => model.PoczatkowaIloscCzesci)</td>
        </tr>
        }
    </tbody>
</table>